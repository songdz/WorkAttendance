<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.songdz.workattendance.attendance.Attendance">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_attendanceShow"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/attendance_show" />
    <TextView
        android:id="@+id/textView_showAttendanceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_attendanceShow"
        android:text="@string/last_record_time"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_info"
                android:gravity="center"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attendance"
        android:textColor="#0000FF"
        android:textSize="45dp"
        android:id="@+id/button_attendance"
        android:layout_above="@+id/layout_bottom"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Hi,  SongDz  "
        android:id="@+id/textView_showUser"
        android:layout_above="@+id/button_attendance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textSize="45dp"/>


</RelativeLayout>
